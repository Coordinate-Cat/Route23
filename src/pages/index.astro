---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav/index.jsx';
---
<html lang="en">
  <head>
    <MainHead title="Route23" />
    <style lang="scss">
    .wrapper {
      height: 1000px;
      margin-top: 60px;
    }
    .top-card {
      display: flex;
      align-items:flex-start;
      width: 100%;
      // height: 64px;
      font-size: 32px;
      line-height: 28px;
      // line-height: 64px;
      font-weight: bold;
      text-align: center;
      text-decoration: none;
      & > p {
        margin: 0;
      }
      &-icon {
        color: #000;
        background-color: #ffc800;
        width: 64px;
        margin: 0 auto;
      }
      &-text {
        color: #fff;
        background-color: #000;
        text-align: left;
        width: 100%;
        margin: 0 auto;
        height: 32px;
        padding-left: 20px;
      }
    }
    .white {
      color: #fff;
    }
    .green {
      background-color: #00933c;
    }
    .icon {
      width: 64px;
      font-size: 44px;
      display: flex;
      align-items:center;
      justify-content: center;
      line-height: 64px;
    }
    .bold {
      font-weight: bold;
    }
    .wrap {
      display:flex;
      flex-flow: column;
      height: 64px;
    }
    .sub {
      &-title {
        font-size: 32px;
        line-height: 28px;
        height: 32px;
        width: 200px;
      }
      &-desc {
        font-size: 24px;
        line-height: 38px;
        height: 32px;
        color: #7c7c7c;
      }
    }
    .external {
      display: none;
    }
    .top-card:hover {
      .external {
        margin-left: 4px;
        transform: rotate(-90deg);
        display: inline;
      }
    }
    .github {
      width: 44px;
      height: 61px;
      fill: #fff;
    }
    </style>
  </head>
  <body>
    <Nav />
    <main class="wrapper">
      <a href="/projects" class="top-card">
        <!-- <p class="top-card-icon"><i class="material-icons icon">drive_file_rename_outline</i></p> -->
        <p class="top-card-icon"><i class="material-icons icon bold">arrow_forward</i></p>
        <!-- <p class="top-card-text">BLOG</p> -->
        <div class="wrap">
          <p class="top-card-text sub-title">BLOG</p>
          <p class="top-card-text sub-desc">Internal Page</p>
        </div>
      </a>
      <a href="/docs" class="top-card mt2">
        <!-- <p class="top-card-icon"><i class="material-icons icon">folder_open</i></p> -->
        <p class="top-card-icon"><i class="material-icons icon bold">arrow_forward</i></p>
        <div class="wrap">
          <p class="top-card-text sub-title">DOCS</p>
          <p class="top-card-text sub-desc">Internal Page</p>
        </div>
      </a>
      <a href="https://github.com/Coordinate-Cat" class="top-card mt2">
        <p class="top-card-icon white green"><i class="material-icons icon bold">south_east</i></p>
        <p class="top-card-icon white green">
          <svg class="github" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
          </svg>
        </p>
        <div class="wrap">
          <p class="top-card-text sub-title">Github<i class="material-icons bold external">open_in_new</i></p>
          <p class="top-card-text sub-desc">External Page</p>
        </div>
      </a>
      <a href="https://github.com/Route23/SubwayUI" class="top-card mt2">
        <p class="top-card-icon white green"><i class="material-icons icon bold">south_east</i></p>
        <p class="top-card-icon white green"><i class="material-icons icon">subway</i></p>
        <div class="wrap">
          <p class="top-card-text sub-title">SubwayUI<i class="material-icons bold external">open_in_new</i></p>
          <p class="top-card-text sub-desc">External Page</p>
        </div>
      </a>
    </main>
  </body>
</html>
