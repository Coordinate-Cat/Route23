---
import MainHead from '../components/MainHead.astro';
import Button from '../components/Button/index.jsx';
import Nav from '../components/Nav/index.jsx';

const { content } = Astro.props;
const cut_date = content.published_at;

const date = cut_date.substring( 0, 10 );
---
<html lang={ content.lang || 'en' }>
  <head>
    <MainHead title={content.title} />
    <link rel="stylesheet" href="/markdown.css">
    <style lang="scss">
      .hero {
        padding: 8rem;
        display: flex;
        background-color: var(--t-fg);
        background-repeat: no-repeat;
        background-size: cover;
        min-height: 25vw;
        color: white;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        filter: grayscale(100);
      }

      .tag {
        margin-left: 0.5em;
        margin-right: 0.5em;
        padding: 0 8px;
        border-radius: 20px;
        text-transform: uppercase;
        font-weight: 900;
        background-color: #ffc800;
        color: #000;
        &:first-child {
          margin-left: 0;
        }
      }

      .title {
        font-size: var(--f-u10);
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.0625em;
      }

      .leadIn {
        color: var(--t-bg);
        background-color: #000;
      }

      .date {
        font-weight: 900;
      }

      .flex {
        height: 20px;
        display: flex;
      }

      .tagline {
        color: #7c7c7c;
        font-weight: 900;
        font-size: 16px;
        line-height: 1.2;
        padding: 0 32px;
        margin: 0;
      }

      .content {
        font-size: var(--f-u1);
        line-height: 1.2;
        color: #fff;
        padding: 0 32px;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <Nav />
    <header style={`background-image:url(${content.img})`} class="hero">
      <h1 class="title">{content.title}</h1>
    </header>
    <div class="leadIn">
      <div class="wrapper">
        <div class="tags tal flex">
          {content.tags.map((t) => (
            <span class="tag">{t}</span>
          ))}
          <div class="date">{date}</div>
        </div>
      </div>
      <h3 class="tagline">desc : {content.description}</h3>
    </div>
    <div class="pt0">
      <div class="content"><slot></slot></div>
    </div>
    <!-- <footer class="tac mt6 mb6">
      <a href="/projects">
        <Button>View More</Button>
      </a>
    </footer> -->
  </body>
</html>
